<div class="container-fluid ">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <h1 class="text-center main-heading">Contact us</h1>
            <p class="text-center sub-heading">We will be happy to help</p>
            <div class="row">
                <div class="col-md-6 col-12 mx-auto">
                    <form action="/contact" method="POST">
                        <div class="form-group">
                            <label for="exampleInputPassword1">Name</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholders="enter pass"
                                name="Name">
                            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholders="Enter email" name="Email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword11">Phone</label>
                            <input type="number" class="form-control" id="exampleInputPassword1"
                                placeholders="Phone number" name="Phone">

                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword11">Message</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholders="Message"
                                name="Message">

                        </div>


                        <button type="submit" class="btn-style btn-primary">Submit</button>
                    </form>
                </div>
            </div>

        </div>
    </div>

</div>